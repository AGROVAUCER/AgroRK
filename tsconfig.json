{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "server.ts",
    "routes/**/*.ts",
    "modules/**/*.ts",
    "middleware/**/*.ts",
    "src/**/*.ts",
    "lib/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "db/**", "prisma/**"]
}